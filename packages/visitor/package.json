{
    "name": "@interactivevision/visitor",
    "version": "0.1.0",
    "description": "A simple template for a custom React component library",
    "license": "MIT",
    "type": "module",
    "main": "dist/index.js",
    "types": "types/index.d.ts",
    "homepage": "https://github.com/interviteam/visitor",
    "repository": {
        "type": "git",
        "url": "https://github.com/interviteam/visitor.git",
        "directory": "packages/visitor"
    },
    "bugs": {
        "url": "https://github.com/interviteam/visitor/issuess"
    },
    "files": [
        "dist",
        "types"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.esm.js",
            "require": "./dist/index.js",
            "types": "./types/index.d.js"
        },
        "./server": {
            "import": "./dist/server.esm.js",
            "require": "./dist/server.js",
            "types": "./types/server.d.js"
        }
    },
    "devDependencies": {
        "@types/node": "^18.11.18",
        "tslib": "^2.4.0",
        "typescript": "^4.8.2",
        "esbuild": "^0.17.3",
        "esbuild-node-externals": "^1.6.0"
    },
    "scripts": {
        "dev": "./build.js --watch",
        "build": "npm run clean && ./build.js && tsc --emitDeclarationOnly",
        "clean": "rm -rf types && rm -rf dist"
    }
}
